generator client {
  provider = "prisma-client-js"
  output = "../node_modules"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// github repository model

model Repository {
  id            String   @id @default(cuid())
  name          String
  owner         String
  description   String?
  url           String
  stars         Int      @default(0)
  forks         Int      @default(0)
  language      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  issues        Issue[]
  pullRequests  PullRequest[]
}